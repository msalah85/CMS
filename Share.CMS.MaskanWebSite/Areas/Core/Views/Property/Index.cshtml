
@using Business.Globalization
@using Business.SessionImpl
@using Business.Enums
@using Business.Services.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" type="text/css" href="../css/normalize.css" />
}

@{
    bool isRight = false;
    GlobalizationManager _GlobalizationManager = SessionHandler.Instance.Get<GlobalizationManager>(SessionEnum.Language_Info);
    if (_GlobalizationManager.IsUserLang_RTL)
    {
        isRight = true;
    }
}

@if (isRight)
{
 <style>
     #titleAddProp {
         text-align: right;
         margin-bottom: 50px;
     }
 </style>
}
else
{
    <style>
        #titleAddProp {
            text-align: left;
            margin-bottom: 50px;
        }
    </style>
}

<div class="AddPropert " style="background-color: #fff; padding:20px;margin: 40px">
    <div class="container">
        <div class="title" id="titleAddProp">
            <h5>@_GlobalizationManager.GetTranslatedText("Add your properity", Enum_LangModule.MaskanWeb, "2")</h5>
        </div>
        <div class="row">
            <div class="col-md-8">
                <form>
                    <div class="row">
                        <div class="col m6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("Name", Enum_LangModule.MaskanWeb, "27")">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m12">
                            <div class="form-group">
                                <textarea type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("Description", Enum_LangModule.MaskanWeb, "52")" rows="10"></textarea>
                            </div>
                        </div>
                        <div class="col m6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("Balconies", Enum_LangModule.MaskanWeb, "53")">
                            </div>
                        </div>
                        <div class="col m6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("Status", Enum_LangModule.MaskanWeb, "54")">
                            </div>
                        </div><div class="col m6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("Total Floors", Enum_LangModule.MaskanWeb, "55")">
                            </div>
                        </div><div class="col m6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("New / Resale", Enum_LangModule.MaskanWeb, "56")">
                            </div>
                        </div><div class="col m6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("No. Open Sides", Enum_LangModule.MaskanWeb, "57")">
                            </div>
                        </div><div class="col m6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("Road facing main entry", Enum_LangModule.MaskanWeb, "58")">
                            </div>
                        </div><div class="col m6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("facing", Enum_LangModule.MaskanWeb, "59")">
                            </div>
                        </div><div class="col m6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("Price Negotiable", Enum_LangModule.MaskanWeb, "60")">
                            </div>
                        </div><div class="col m6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("Overlooking", Enum_LangModule.MaskanWeb, "61")">
                            </div>
                        </div><div class="col m6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@_GlobalizationManager.GetTranslatedText("Ownership Type", Enum_LangModule.MaskanWeb, "62")">
                            </div>
                        </div>
                    </div>
                    <div class="content">
                        <div class="box">
                            <input type="file" name="file-5[]" id="file-5" class="inputfile inputfile-4" data-multiple-caption="{count} files selected" multiple />
                            <label for="file-5"><i class="fa fa-plus" style="display: block;font-size: 30px;"></i> <span>@_GlobalizationManager.GetTranslatedText("Image", Enum_LangModule.MaskanWeb, "50")</span></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m6 ">
                            <button class="waves-effect waves-light orange btn text-center" style="border-radius: 10px;margin-bottom: 20px"> @_GlobalizationManager.GetTranslatedText("Save", Enum_LangModule.MaskanWeb, "51")  </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

